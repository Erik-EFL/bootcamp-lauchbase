{% extends "layout.njk" %}

{% block head %}

<link rel="stylesheet" href="/stylesheet.css">
<title>Foodfy</title>

{% endblock %}

{% block content %}

<section class="box">
    <div>
        <Article>
            <h1>As melhores receitas</h1>
            <p>Aprenda a construir os melhores pratos<br>
                com receitas criadas por profissionas<br>
                do mundo inteiro.</p>
        </Article>
        <img src="../img/chef.png" alt="figura chefe">
    </div>
</section>


<main>
    <h2>Mais acessadas</h2>

    <div class="cards">
        {% for item in items %}
        <div class="card" id= '{{item.id}}'>
            <a href="/recipes/{{item.index}}"><img src="{{item.image}}" alt="Imagem de {{item.title}}"></a>
            <h4>{{item.title}}</h4>
            <p>{{item.author}}</p>
        </div>
        {% endfor %}
    </div>
</main>




<script src="script.js"></script>

{% endblock %}